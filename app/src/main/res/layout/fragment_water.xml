<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTO WATERING"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_water"
        android:layout_marginLeft="90dp"/>
</LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="WATER PLAN AT:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="65dp"
                android:id="@+id/tv_wateratwater"
                android:text="09:00"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_wateratno"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="125dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_wateratyes"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@id/iv_wateratno"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="WATER PLAN EVERY:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="65dp"
                android:id="@+id/tv_watereverywater"
                android:text="09:00"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_watereveryno"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="125dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_watereveryyes"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@id/iv_watereveryno"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

</LinearLayout>

