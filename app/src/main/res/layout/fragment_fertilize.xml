<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTO FERTILIZE"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_fertilize"
            android:layout_marginLeft="90dp"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="FERTILIZE PLAN AT:"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/tv_fertilizeatwater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/Putih"
                    android:inputType="number"
                    android:text="09"
                    android:textSize="65dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_fertilizeatwater"
                    android:text=":00"
                    android:textSize="65dp"
                    android:textColor="@color/Hitam" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_fertilizeatyes"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="FERTILIZE PLAN EVERY:"/>

            <Spinner
                android:layout_width="wrap_content"
                android:id="@+id/spinner_hari"
                android:layout_height="80dp"
                android:layout_gravity="center"></Spinner>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_fertilizeeveryyes"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>